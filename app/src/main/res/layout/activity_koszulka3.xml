<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="500dp"
    android:background="@drawable/grafika2"
    tools:context="wrss.donotgetlost.koszulka3">

    <TextView
        android:id="@+id/skrytka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:maxWidth="300dp"
        android:paddingHorizontal="40dp"
        android:text="@string/skrytka"
        android:textColor="#f8bb00"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/aragorn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skrytka"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:gravity="center_horizontal"
        android:maxWidth="300dp"
        android:paddingHorizontal="40dp"
        android:text="@string/zapalki_pytanie"
        android:textColor="#f8bb00"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/aragorn_podpowiedz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aragorn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        android:gravity="center_horizontal"
        android:maxWidth="300dp"
        android:paddingHorizontal="40dp"
        android:text="8"
        android:textColor="#f8bb00"
        android:textSize="20dp" />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:background="#f8bb00"
        android:textColor="#121499"
        android:layout_below="@+id/aragorn_podpowiedz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp" />


